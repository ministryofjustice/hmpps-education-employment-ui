{% if prisonerSearchResults.totalElements === 0 %}
  {% if searchTerm and filterStatus !== 'ALL' %}
    <span class="govuk-heading-m">0 results for "{{ searchTerm }}" in {{ contentLookup.fields.newStatus[filterStatus] }}</span><br>
    <span class="govuk-body govuk-!-font-size-19">Check your spelling and search again, or select another status.</span>
  {% elif filterStatus !== 'ALL' %}
    <span class="govuk-heading-m">0 results for {{ contentLookup.fields.newStatus[filterStatus] }}</span><br>
    <span class="govuk-body govuk-!-font-size-19">Check your spelling and search again, or clear the search and browse for the prisoner.</span>
  {% else %}
    <span class="govuk-heading-m">Check your spelling and search again, or search by prisoner name.</span>
  {% endif %}
{% endif %}