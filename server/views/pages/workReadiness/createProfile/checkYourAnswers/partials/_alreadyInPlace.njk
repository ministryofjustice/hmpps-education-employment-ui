<h2 class="govuk-heading-m">Things they have in place already</h2>

<dl class="govuk-summary-list govuk-!-margin-bottom-9">
  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      Has already got
    </dt>
    <dd class="govuk-summary-list__value" data-qa="alreadyInPlace">
      {% for item in record.alreadyInPlace %}
        <div>{{ contentLookup.fields.alreadyInPlace[item] }}{{ ',' if record.alreadyInPlace.length !== loop.index }}</div>
      {% endfor %}
    </dd>
    <dd class="govuk-summary-list__actions">
      <a class="govuk-link" href="{{ addressLookup.workReadiness.createProfile.alreadyInPlace(id, 'edit') }}" data-qa="alreadyInPlaceLink">
        Change<span class="govuk-visually-hidden"> things they have in place already</span>
      </a>
    </dd>
  </div>

  {% if record.alreadyInPlace.indexOf('ID') > -1 %}
    <div class="govuk-summary-list__row">
      <dt class="govuk-summary-list__key">
        Type of ID
      </dt>
      <dd class="govuk-summary-list__value" data-qa="identification">
        {% for item in record.identification %}
          <div>{{ contentLookup.fields.identification[item] }}{{ ' - ' + record.typeOfIdentificationDetails if item === 'OTHER' }}{{ ',' if record.identification.length !== loop.index }}</div>
        {% endfor %}
      </dd>
      <dd class="govuk-summary-list__actions">
        <a class="govuk-link" href="{{ addressLookup.workReadiness.createProfile.identification(id, 'edit') + '?from=' + encryptUrlParameter(originalUrl) }}" data-qa="identificationLink">
          Change<span class="govuk-visually-hidden"> type of ID they have</span>
        </a>
      </dd>
    </div>
  {% endif %}

</dl>