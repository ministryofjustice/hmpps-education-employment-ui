<table class="govuk-table">
  <thead class="govuk-table__head">
    <tr class="govuk-table__row">
      <th scope="col" class="govuk-table__header" width="30%">Application status</th>
      <th scope="col" class="govuk-table__header">Additional information</th>
    </tr>
  </thead>
  <tbody class="govuk-table__body">
    {% for item in applicationProgress %}
      <tr class="govuk-table__row">
        <td scope="row" class="govuk-table__cell">
          {{ contentLookup.applicationStatus[item.status] }}<br>
          <span class="govuk-hint">{{ item.createdByDateTime }}, {{ item.createdByName }}</span>
        </td>
        <td class="govuk-table__cell">{{ item.notes if item.notes else "None entered" }}</td>
      </tr>
    {% endfor%}
  </tbody>
</table>