{
  "name": "hmpps-education-employment-ui",
  "version": "1.0.0",
  "description": "Hmpps Education Employment Ui",
  "repository": "git@github.com:ministryofjustice/hmpps-education-employment-ui.git",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "copy-views": "cp -R server/views dist/server/",
    "compile-sass": "sass --quiet-deps --no-source-map --load-path=node_modules/govuk-frontend --load-path=node_modules/@ministryofjustice/frontend --load-path=. ./assets/sass/application.sass:./assets/stylesheets/application.css --style compressed",
    "watch-ts": "tsc -w",
    "watch-views": "nodemon --watch server/views -e html,njk -x npm run copy-views",
    "watch-node": "DEBUG=gov-starter-server* nodemon -r dotenv/config --watch dist/ dist/server.js | bunyan -o short",
    "watch-sass": "npm run compile-sass -- --watch",
    "build": "npm run compile-sass && tsc && npm run copy-views",
    "start": "node $NODE_OPTIONS dist/server.js | bunyan -o short",
    "start:dev": "concurrently -k -p \"[{name}]\" -n \"Views,TypeScript,Node,Sass\" -c \"yellow.bold,cyan.bold,green.bold,blue.bold\" \"npm run watch-views\" \"npm run watch-ts\" \"npm run watch-node\" \"npm run watch-sass\"",
    "start-feature": "export $(cat feature.env) && node $NODE_DEBUG_OPTION dist/server.js | bunyan -o short",
    "watch-node-feature": "export $(cat feature.env) && nodemon --watch dist/ $NODE_DEBUG_OPTION dist/server.js | bunyan -o short",
    "start-feature:dev": "concurrently -k -p \"[{name}]\" -n \"Views,TypeScript,Node,Sass\" -c \"yellow.bold,cyan.bold,green.bold,blue.bold\" \"npm run watch-views\" \"npm run watch-ts\" \"npm run watch-node-feature\" \"npm run watch-sass\"",
    "lint": "eslint . --cache --max-warnings 0",
    "lint-fix": "eslint . --cache --max-warnings 0 --fix",
    "typecheck": "tsc && tsc -p integration_tests",
    "test": "jest",
    "test:ci": "jest --runInBand",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "int-test": "cypress run --config video=false",
    "int-test-ui": "cypress open --e2e --browser chrome",
    "clean": "rm -rf dist build node_modules stylesheets",
    "rebuild": "npm run clean && npm run setup && npm run build",
    "record-build-info": "node ./bin/record-build-info",
    "outdated": "npm outdated",
    "setup": "npm ci && hmpps-npm-script-run-allowlist"
  },
  "engines": {
    "node": ">=24 <25",
    "npm": "^10"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "isolatedModules": true
        }
      ]
    },
    "collectCoverageFrom": [
      "server/**/*.{ts,js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/(server|job)/**/?(*.)(cy|test).{ts,js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      ".circleci/*",
      "migrations/*",
      "node_modules/*",
      "test/*",
      "integration_tests/*"
    ],
    "delay": 2500,
    "ext": "js,json,html,njk"
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@ministryofjustice/frontend": "5.1.0",
    "@ministryofjustice/hmpps-audit-client": "^1.1.1",
    "@ministryofjustice/hmpps-connect-dps-components": "^2.2.0",
    "@types/express-serve-static-core": "^4.19.5",
    "@types/qs": "^6.9.18",
    "agentkeepalive": "^4.6.0",
    "applicationinsights": "^2.9.7",
    "axios": "^1.8.4",
    "body-parser": "^1.20.2",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "class-transformer": "^0.5.1",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "connect-redis": "^7.1.1",
    "cookie": "^1.0.2",
    "crypto-js": "^4.2.0",
    "csurf": "^1.11.0",
    "date-fns": "^3.6.0",
    "debug": "^4.4.1",
    "dotenv": "^16.5.0",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "express": "^4.18.2",
    "express-session": "^1.18.0",
    "follow-redirects": "^1.15.9",
    "formidable": "^3.5.4",
    "govuk-frontend": "^5.9.0",
    "helmet": "^7.1.0",
    "http-errors": "^2.0.0",
    "joi": "^17.13.3",
    "jquery": "^3.7.1",
    "jwt-decode": "^3.1.2",
    "lodash": "^4.17.21",
    "make-dir": "^4.0.0",
    "nocache": "^4.0.0",
    "nunjucks": "^3.2.4",
    "passport": "^0.7.0",
    "passport-oauth2": "^1.8.0",
    "ramda": "^0.31.3",
    "redis": "^4.6.14",
    "reflect-metadata": "^0.2.2",
    "superagent": "^10.2.3",
    "url-value-parser": "^2.2.0",
    "uuid": "^10.0.0",
    "validator": "^13.12.0"
  },
  "devDependencies": {
    "@cypress/skip-test": "^2.6.1",
    "@ministryofjustice/hmpps-npm-script-allowlist": "0.0.3",
    "@types/bunyan": "^1.8.11",
    "@types/bunyan-format": "^0.2.9",
    "@types/compression": "^1.7.5",
    "@types/connect-flash": "^0.0.40",
    "@types/cookie-session": "^2.0.49",
    "@types/crypto-js": "^4.2.2",
    "@types/csurf": "^1.11.5",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.12",
    "@types/jquery": "^3.5.32",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/lodash": "^4.17.16",
    "@types/node": "^20.17.12",
    "@types/nunjucks": "^3.2.6",
    "@types/passport": "^1.0.16",
    "@types/passport-oauth2": "^1.4.17",
    "@types/ramda": "^0.30.2",
    "@types/superagent": "^8.1.9",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10",
    "@types/validator": "^13.12.2",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "audit-ci": "^6.6.1",
    "brace-expansion": "^1.1.12",
    "concurrently": "^8.2.2",
    "cookie-session": "^2.1.0",
    "cypress": "^13.12.0",
    "cypress-multi-reporters": "^2.0.5",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-cypress": "^2.15.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "jest-junit": "^16.0.0",
    "jsonwebtoken": "^9.0.2",
    "lint-staged": "^15.2.7",
    "mocha-junit-reporter": "^2.2.1",
    "nock": "^13.5.6",
    "nodemon": "^3.1.9",
    "prettier": "^2.8.8",
    "sass": "^1.83.4",
    "semver": "^7.6.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.6",
    "typescript": "^5.7.3"
  },
  "overrides": {
    "cypress": {
      "@cypress/request": "^3.0.0"
    },
    "csurf": {
      "cookie": "0.7.2"
    },
    "mocha": {
      "diff": "8.0.3"
    },
    "minimatch": "^10.2.3",
    "eslint": {
      "minimatch": "^3.1.4"
    },
    "@ministryofjustice/hmpps-audit-client": {
      "fast-xml-parser": "^5.3.8"
    }
  }
}
