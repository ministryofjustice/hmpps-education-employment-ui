{% if tab === 'overview' %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-m govuk-!-margin-bottom-7">Overview</h1>

      {% if profile %}
        <p>Assessment already completed</p>
      {% else %}
        <div class="govuk-notification-banner" role="region" aria-labelledby="govuk-notification-banner-title" data-module="govuk-notification-banner">
          <div class="govuk-notification-banner__header">
            <h2 class="govuk-notification-banner__title" id="govuk-notification-banner-title">
              Important
            </h2>
          </div>
          <div class="govuk-notification-banner__content">
            <p class="govuk-notification-banner__heading">
              {{ prisoner.firstName }} {{ prisoner.lastName }} has not completed a work assessment.
              <a class="govuk-notification-banner__link" href="{{ addressLookup.createProfile.rightToWork(prisoner.prisonerNumber) }}"><br>Complete assessment now</a>.
            </p>
          </div>
        </div>
      {% endif %}

    </div>
  </div>
{% endif %}
