{% block beforeContent %}

{% endblock %}

{% block content %}
    {{ errorSummary(errors) }}

    <div class="govuk-grid-row govuk-!-display-none-print">
        {# This whole section has a grey background colour #}
        <div class="govuk-grid-column-full">
            <h1 class="govuk-heading-l govuk-!-margin-bottom-7" xmlns="http://www.w3.org/1999/html">{{ title }}</h1>
            <form method="post" novalidate="novalidate" name="prisoner-search-form" id="prisoner-search-form" class="prisoner-search__form" data-qa="prisoner-search-form">

                <div class="govuk-grid-row">
                    <div class="govuk-grid-column-full">

                    <nav class="moj-sub-navigation govuk-!-margin-bottom-7" aria-label="Sub navigation">
                        <ul class="moj-sub-navigation__list">
                        <li class="moj-sub-navigation__item">
                            <a class="moj-sub-navigation__link" aria-current="page" href="#">Matched jobs</a>
                        </li>
                        <li class="moj-sub-navigation__item">
                            <a class="moj-sub-navigation__link" href="job-match-list-other">Other jobs chosen by prisoner</a>
                        </li>
                        <li class="moj-sub-navigation__item">
                            <a class="moj-sub-navigation__link" href="job-match-list-archived">Archived jobs</a>
                        </li>
                        </ul>
                    </nav>

                    </div>
                </div>
                
                {% include './partials/_matchedJobsFilters.njk' %}
                {% include './partials/_resultsPanel.njk' %}
                {% include './partials/_matchedJobsTable.njk' %}

            </form>
        </div>
    </div>
{% endblock %}



